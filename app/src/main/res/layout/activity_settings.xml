<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity" android:background="#004d00">

    <TextView
            android:text="@string/nivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="80dp"
            android:id="@+id/textView2" android:textSize="30sp"
            android:textColor="#FFFFFF" android:layout_marginStart="32dp"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/spinner"
            android:spinnerMode="dropdown"
            android:textAlignment="gravity" android:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="60dp"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            android:layout_marginTop="4dp"/>
    <TextView
            android:text="@string/sonido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="90dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:textColor="#FFFFFF"
            android:id="@+id/textView3"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/textView3" android:layout_marginTop="6dp">
        <RadioButton
                android:text="@string/on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rbSonido" android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:buttonTint="@color/blanco"/>
        <RadioButton
                android:text="@string/mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rbMute" android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:buttonTint="@color/blanco"/>
    </RadioGroup>
    <Button
            android:text="@string/volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVolver" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="33dp" app:layout_constraintEnd_toStartOf="@+id/btnGuardar"
            android:layout_marginEnd="60dp"/>
    <Button
            android:text="@string/guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnGuardar"
            app:layout_constraintStart_toEndOf="@+id/btnVolver"
            android:layout_marginStart="60dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="33dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>
</android.support.constraint.ConstraintLayout>